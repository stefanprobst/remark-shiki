{
  "name": "@stefanprobst/remark-shiki",
  "version": "2.2.0",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "type": "module",
  "repository": "git@github.com:stefanprobst/remark-shiki.git",
  "author": "Stefan Probst <stefanprobst@kolabnow.com>",
  "license": "MIT",
  "files": [
    "src"
  ],
  "scripts": {
    "format": "prettier . -l --ignore-path .gitignore",
    "format:fix": "yarn format --write",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "yarn lint --fix",
    "prepare": "simple-git-hooks",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest",
    "validate": "yarn run format && yarn run lint && yarn run test"
  },
  "engines": {
    "node": ">=14.17",
    "yarn": "1.x"
  },
  "dependencies": {
    "json5": "^2.2.0",
    "parse-numeric-range": "^1.3.0",
    "unified": "^10.1.0",
    "unist-util-visit": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@jest/types": "^27.2.5",
    "@stefanprobst/commitlint-config": "^1.0.2",
    "@stefanprobst/eslint-config": "^1.0.10",
    "@stefanprobst/eslint-config-node": "^4.0.0",
    "@stefanprobst/prettier-config": "^1.0.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.31.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^27.3.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rehype-raw": "^6.1.0",
    "rehype-stringify": "^9.0.2",
    "remark-parse": "^10.0.0",
    "remark-rehype": "^9.0.0",
    "shiki": "^0.12.1",
    "simple-git-hooks": "^2.6.1",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "shiki": "^0.14.1"
  },
  "commitlint": {
    "extends": [
      "@stefanprobst/commitlint-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@stefanprobst/eslint-config-node"
    ],
    "ignorePatterns": [
      "*.d.ts"
    ]
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.(json|md)": "prettier --write"
  },
  "prettier": "@stefanprobst/prettier-config",
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn run validate"
  }
}
